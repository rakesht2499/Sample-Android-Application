<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2DFDB"
    android:orientation="vertical"
    tools:context=".ContactsMenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#009688">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imBackButton"
                            android:layout_width="160dp"
                            android:layout_height="46dp"
                            android:layout_weight="1"
                            android:background="#00796B"
                            android:clickable="true"
                            app:srcCompat="?attr/actionModeCloseDrawable" />

                        <TextView
                            android:id="@+id/tvheading"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:fontFamily="serif"
                            android:gravity="center_horizontal"
                            android:paddingRight="10dp"
                            android:text="CONTACT THE PERSON"
                            android:textColor="@color/darkgray"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvNameContacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:gravity="center_horizontal"
                        android:textColor="@color/darkgray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imCall"
                        android:layout_width="match_parent"
                        android:layout_height="121dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:srcCompat="@mipmap/phonefl" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:gravity="center_horizontal"
                        android:text="Call"
                        android:textColor="@color/darkgray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imLinkedIn"
                        android:layout_width="match_parent"
                        android:layout_height="121dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:srcCompat="@mipmap/linkedin" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:gravity="center_horizontal"
                        android:text=" View Profile"
                        android:textColor="@color/darkgray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imNavigate"
                        android:layout_width="match_parent"
                        android:layout_height="121dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:srcCompat="@mipmap/maps_round" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:gravity="center_horizontal"
                        android:text="Navigate"
                        android:textColor="@color/darkgray"
                        android:textColorHighlight="@color/darkgray" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>