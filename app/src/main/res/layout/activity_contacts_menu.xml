<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2DFDB"
    android:orientation="vertical"
    tools:context=".ContactsMenu">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:background="#009688">

        <ImageView
            android:id="@+id/imBackButton"
            android:layout_width="60dp"
            android:layout_height="46dp"
            android:background="#00796B"
            android:clickable="true"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/tvheading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:fontFamily="serif"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="CONTACT THE PERSON"
            android:textColor="@color/darkgray"
            android:textSize="24sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvNameContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:textColor="@color/darkgray" />

    <ImageView
        android:id="@+id/imCall"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:clickable="true"
        app:srcCompat="@mipmap/phonefl" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="Call"
        android:textColor="@color/darkgray" />

    <ImageView
        android:id="@+id/imNavigate"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:clickable="true"
        app:srcCompat="@mipmap/maps_round" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="Navigate"
        android:textColor="@color/darkgray"
        android:textColorHighlight="@color/darkgray" />

    <ImageView
        android:id="@+id/imLinkedIn"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:clickable="true"
        app:srcCompat="@mipmap/linkedin" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text=" View Profile"
        android:textColor="@color/darkgray" />
</LinearLayout>