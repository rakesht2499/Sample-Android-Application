<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2EBF2"
    android:orientation="vertical"
    tools:context=".GetInfo">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0097A7"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="GET INFO BY ID"
        android:textColor="#212121"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:hint="Enter 11 digit Number"
        android:inputType="phone"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:textColorLink="@color/exitinfo" />

    <Button
        android:id="@+id/btnSubmitInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#0097A7"
        android:fontFamily="serif"
        android:text="Submit" />

    <TextView
        android:id="@+id/tvResultInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:hint="Waiting for Output !!! Enter the Number :-)"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnexitInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:background="@color/exitinfo"
            android:fontFamily="serif"
            android:foregroundGravity="bottom"
            android:text="Exit Get-Info"
            android:textColor="@android:color/white"
            android:textColorLink="#FFFFFF" />

    </LinearLayout>
</LinearLayout>